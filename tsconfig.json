{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "composite": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": false,
    "lib": ["DOM", "ESNext", "DOM.Iterable"],
    "isolatedModules": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]

}
