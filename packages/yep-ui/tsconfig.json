{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "outDir": "dist/types",
    "lib": [
      "esnext",
      "dom"
    ],
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "dist/types"
  },
  "include": [
    "commands/**/*.*",
    "src/**/*.ts",
    "src/**/**/*.ts",
    "src/**/**/*.vue",
    "auto-imports.d.ts",
    "shims.d.ts",
    "volar.d.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
