{
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build && vue-tsc --declaration --emitDeclarationOnly`",
    "serve": "vite preview",
    "docs:dev": "pnpm run -C docs dev",
    "docs:build": "pnpm run -C docs build",
    "play": "pnpm -C playground run dev",
    "stub": "pnpm -r --filter=./packages/* --parallel run stub"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.6",
    "@yep-ui/components": "workspace:*",
    "@yep-ui/playground": "workspace:*",
    "@yep-ui/preset-theme": "workspace:*",
    "date-fns": "^2.29.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.34.1",
    "@types/node": "^18.13.0",
    "eslint": "^8.32.0",
    "typescript": "^4.9.4",
    "unbuild": "^1.1.2",
    "vue": "^3.2.45",
    "vue-tsc": "^1.0.24"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "vite",
        "react",
        "react-dom"
      ]
    }
  }
}
